<div id="top-bar" class="top_discount_part">
  {% comment %} {% if section.settings.full_width_header %}<div class="row">{% endif %} {% endcomment %}
  {%- if section.settings.num_of_promo_banners == "1" -%}
    {% comment %} ..:: PROMO BANNER ::.. {% endcomment %}
      <div id="single-promo-wrapper" class="desktop-12 tablet-6 mobile-3">
        
        {%- if section.settings.announcement_link_one -%}
          <a href="{{ section.settings.announcement_link_one }}">{{ section.settings.announcement_text_one }}</a>
        {%- else -%}
          {{ section.settings.announcement_text_one }}
        {%- endif -%}

      </div>
  {% comment %} {% if section.settings.full_width_header %}</div>{% endif %} {% endcomment %}
  {%- endif -%}
  

  {% comment %} ..:: TWO PROMO BANNER ::.. {% endcomment %}
    {%- if section.settings.num_of_promo_banners == "2" -%}
      <div id="double-promo-wrapper">

        {% comment %} MOBILE : LEFT ARROW {% endcomment %}
        <div id="promo-arrow-left">
          {% include 'svg-icon-caret-left' %}
        </div>

        <div class="promo-banner one">
          {%- if section.settings.announcement_link_one -%}
            <a href="{{ section.settings.announcement_link_one }}">{{ section.settings.announcement_text_one }}</a>
          {%- else -%}
            {{ section.settings.announcement_text_one }}
          {%- endif -%}
        </div>

        <div class="promo-banner two">
          {%- if section.settings.announcement_link_two -%}
            <a href="{{ section.settings.announcement_link_two }}">{{ section.settings.announcement_text_two }}</a>
          {%- else -%}
            {{ section.settings.announcement_text_two }}
          {%- endif -%}
        </div>

        {% comment %} MOBILE : RIGHT ARROW {% endcomment %}
        <div id="promo-arrow-right">
          {% include 'svg-icon-caret-right' %}
        </div>

      </div>
    {%- endif -%}
</div>