<div class="search_bar search_bar_form">
    <form class="search" action="/search">
        <input type="hidden" name="type" value="product" />
        <input type="text" name="q" value="{{ search.terms | escape }}" class="search-header" />
        <button type="submit" value="Search" class="search-button" aria-label="Search" style="background: transparent;"/>
        {% include 'svg-icon-search' %}
        </button>
    </form>
</div>

<div class="search_bar_icon">
  {% include 'svg-icon-search' %}
</div> 