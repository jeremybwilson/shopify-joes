{% if product %}
    <script>
    window.bvCallback = function (BV) {
        BV.pixel.trackConversion({
            "type" : "ProductDetail",
            "label" : "Product Detail Page",
            "value" : "{{product.title}}",
            {% if customer.first_name %}
                "nickname" : "{{ customer.first_name }}",
                "email" : "{{ customer.email }}",
            {% endif %}
             "locale" : "en_US"
        });
    };
    </script>

