<div id="customer-wrapper" class="reset-password-page">

    <div id="template">
        <div class="template-header">
            <h2 class="title">Reset Account Password</h2>
            <p class="note">Enter a new password for {{ email }}</p>
        </div>

        {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}

            <div id="password" class="clearfix large-form">
                <label class="large" for="password">Password</label>
                <input type="password" value="" name="customer[password]" placeholder="Password" id="customer_password"
                       class="large password form-field" size="16"/>
            </div>
            <div id="password_confirm" class="clearfix large-form">
                <input type="password" value="" name="customer[password_confirmation]"
                       placeholder="Password Confirmation" id="customer_password_confirmation"
                       class="large password form-field" size="16"/>
            </div>
            <div class="action-bottom">
                <input class="secondary button" type="submit" value="Reset Password"/>
            </div>
        {% endform %}
    </div>
</div>