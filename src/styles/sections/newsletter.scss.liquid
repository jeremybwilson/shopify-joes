/*custom-radio*/

.custom-radio {
  display: block;
  position: relative;
  padding-left:30px;
  margin-bottom:0px;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  line-height:19px;

    font-size:$font-15;
    color:$black-color;
    font-weight:$bold;
    letter-spacing:0px;
    margin-bottom: 6px;
    text-transform: uppercase;
    margin-left:53px;

    @include mq('phone'){margin-left: 0px; font-size:$font-12; padding-left: 25px;  margin-top: 8px; margin-bottom: 0px;}
}

.custom-radio input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
}

.checkmark {
    position: absolute;
    top: 2px;
    left: 0;
    height: 18px;
    width: 18px;
    background-color: transparent;
    border-radius: 50%;
    border: 1px solid $black-color;

    @include mq('phone'){height: 15px;
    width: 15px;}
}

.checkmark:after {
  content: "";
  position: absolute;
  display: none;
}

.custom-radio input:checked ~ .checkmark:after {
  display: block;
}

.custom-radio .checkmark:after {
    top: 5px;
    left: 5px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background:$black-color;

    @include mq('phone'){top: 4px; left: 4px; width: 5px; height: 5px;}

}

@include mq('laptop'){
   #newsletter-social .container-fluid{padding:$padding-left-right-mobile22;}
}

@include mq('phone'){
   .men-women-category {flex-direction: column; text-align: center; margin: 16px auto 11px auto;}
}

