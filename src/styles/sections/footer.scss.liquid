@charset "UTF-8";

// actual footer

/*footer*/

footer {
    width:$full-width;
    float:$float-left;
    padding:$padding-left-right;
    background-color:$back-gray;
    padding-top:92px;
    margin-top: 89px;
    max-height: 333px;

    .social_icon .icon {
       width: 20px;
    }

    .row {
        width: 100% !important;
        display: flex;
        flex-wrap: wrap;
    }
    .responsiv_footer_part {
        width: 17%;
        display: inline-block;

        &:nth-child(2) {width: 15%;}
    }

    @media #{$mobile} {
       padding:$padding-left-right-mobil25;
       padding-top:25px;
       margin-top:65px;
    }

    
    i.fab {
       font-size: 18px;
    }

    h4{   
      font-size: $font-12;
      color:$blck-color;
      margin-bottom:6px;
      font-weight:$bold;
      text-transform:uppercase; 
      line-height: 18px;
      
      @media #{$mobile} {margin-bottom: 8px;}

    }

    li{
      list-style: none !important;
      margin:0px 0 6px 0;
      line-height: 18px;

      &:last-child{margin-bottom:0px;}

      @media #{$mobile} {margin: 0px 0 8px 0;}

      a{
        font-size: $font-12;
        color:$blck-color;
        margin-bottom:$mb-0;
        text-decoration:none !important;  
        text-transform: uppercase; 
        text-transform: uppercase; 
        font-weight:$weight-light;
      }
    }

    .social_icon li{ 
      display: inline-block;
      margin: 0 10px;

      &:first-child {
        margin-left: -7px !important;
      }  
    }
}

.cpyright {
    font-size:$font-12;
    color:$light-blck;
    font-weight:$weight-light;
    letter-spacing: 0.1px;
    margin: 25px 0 46px 0;
    text-align: right;

    a {
        font-size: 12px;
        color: #4a4a4a;
    }
    
    @media #{$mobile} {
       margin:0px 0 15px 0;
       text-align:left;
       font-size:$font-10-mo;
    }

}

@media #{$tablet} {
   /*footer*/
   .responsiv_footer_part {max-width: 26% !important; flex: 1 1 26% !important;}
   .responsiv_footer_part:nth-child(2) {flex: 1 1 18% !important; max-width: 18% !important;}
   /*footer*/
}

@media #{$mobile} {
  /*footer*/
     .responsiv_footer_part {max-width:100% !important; flex: 1 1 100% !important; margin-bottom:25px;}
     .responsiv_footer_part:nth-child(2) {flex: 1 1 100% !important; max-width:100% !important;}
   /*footer*/
}


