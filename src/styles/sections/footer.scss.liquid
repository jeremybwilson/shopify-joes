@charset "UTF-8";

// actual footer

/*footer*/

footer {
    width:$full-width;
    float:$float-left;
    padding:$padding-left-right;
    background-color:$back-gray;
    padding-top:92px;
    margin-top: 89px;
    max-height: 333px;

    .social-icon .icon {
       width: 20px;

       path{
          fill:$black-color ;
       }
    }

    .row {
        width: 100% !important;
        display: flex;
        flex-wrap: wrap;
        
        @include mq('phone'){
           padding:$padding-left-right-mobile15;
        }
    }
    .footer-part {
        width: 17%;
        display: inline-block;

        &:nth-child(2) {width: 14.7%;}
    }

    @include mq('laptop'){
       max-height: 100%;
    }

    @include mq('phone'){
       padding:0 10px;
       padding-top:27px;
       margin-top:65px;
       text-align:left;
    }

    ul{margin-bottom:0px; margin-top: 8px;}

    
    i.fab {
       font-size: 18px;
    }

    h4{   
      @include paragraph-font;
      margin-bottom:6px;
      font-weight:$bold;
      text-transform:uppercase; 
      
      @include mq('phone'){margin-bottom: 8px;}

    }

    li{
      list-style: none !important;
      margin:0px 0 7px 0;
      line-height: 18px;

      &:last-child{margin-bottom:0px;}

      @include mq('phone'){margin: 0px 0 9px 0;}

      a{
        @include paragraph-font;
        margin-bottom:$mb-0;
        text-decoration:none !important;  
        text-transform: uppercase; 
        font-weight:$weight-light;
      }
    }

    .social-icon li{ 
      display: inline-block;
      margin: 0 11.3px;

      &:first-child {
        margin-left: -7px !important;
      }  
    }
}

.copyright {
    @include paragraph-font;
    color:$light-black;
    font-weight:$weight-light;
    margin: 34px 0 50px 0;
    text-align: right;

    a {
        font-size:$font-12;
        color:$light-black;

        @include mq('phone'){
           font-size:$font-10-mo;
        }
    }
    
    @include mq('phone'){
       margin:0px 0 10px 0;
       text-align:left;
       font-size:$font-10-mo;
    }

}

@include mq('laptop'){
   .footer-part {width:18% !important;}
   .footer-part:nth-child(2) {width: 18% !important;}
}

@include mq('phone-and-tablet'){
   /*footer*/
   .footer-part {max-width: 26% !important; flex: 1 1 26% !important;}
   .footer-part:nth-child(2) {flex: 1 1 24% !important; max-width: 24% !important;}
   /*footer*/
}

@include mq('phone'){
  /*footer*/
     .footer-part {max-width:100% !important; flex: 1 1 100% !important; margin-bottom:31px;}
     .footer-part:nth-child(2) {flex: 1 1 100% !important; max-width:100% !important;}
     #social-icons {line-height: 12px;}
   /*footer*/
}

/*pagination*/
.pagination-part{
   padding:$padding-left-right;
   margin:25px 0;
   
   span.count{
      @include banner-paragraph-text-white;
      color:$black-color;
      text-transform:uppercase;
   }

}
