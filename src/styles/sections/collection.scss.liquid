/*product*/

.product-list-part {
    display: flex;
    flex-wrap: wrap;
    margin: 50px 0px 58px 0px;
    @include main-container;

    @include mq('phone') { margin:35px -2px 38 -2px;}

    .product {
        
        .box-ratio{
          padding-bottom:0px !important;
        }

            margin: 0px 0.38% 30px 0px;
            flex: 1;
            position: relative;
            flex-grow: 0;
            flex-shrink: 0;
            flex-basis: 24.71%;

        &:nth-child(4n) {margin-right: 0px !important;}

     }

     button.button-wishlist-product {
          background: transparent;
          border: none;
          outline: none;
          position: absolute;
          cursor: pointer;
          height: 16px;
          width: 16px;
          padding: 0;
          margin: 0;
          right: 0;
          top: 0;
          display:none;
      }
}


#collection-product-wrap {
    margin: 0 0 !important;
    width: 100%;
}

div#content {
    width: 100% !important;
    padding: 0 0 !IMPORTANT;
}


#collection-loading-bar {
    display: none;
}

.product-images {
    width: 100% !important;
    max-height: 462px;
    overflow: hidden;
    margin-bottom:27px;
    position: relative;

    @include mq('phone') {min-height:210px; margin-bottom:16px;}


    .hidden {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        display: none;
    }
    
    &:hover .hidden{
      display: block;
    } 

    img{
       width: 100%;
       height: 100%;
       object-fit: cover;
       object-position: center;
    }
}


.three-part-show{ 
    .product {
      
      margin: 0px 0.61% 30px 0px;
      flex: 1;
      position: relative;
      flex-grow: 0;
      flex-shrink: 0;
      flex-basis:32.92%;

      &:nth-child(4n) {margin-right: 0.61% !important;}
      &:nth-child(3n) {margin-right: 0px !important;}

    }

    .product-images {
       max-height:615px;
    }

}

.reveal {
    position: relative;
}

.product-quickview{
       @include quick-view-button;
       left: 0;
       right:14px;
       margin: 0 auto;
       bottom:45px;
       top: auto;
    }

.product-detail{
   
    text-align: center;
    max-width: 75%;
    margin: 0px auto;

    @include mq('phone-and-tablet'){max-width:85%;}
    @include mq('phone'){max-width:100%;}


    .product-price-wrap .bfx-price{
       display:inline-block;
       margin:0 4px;
    }

    p,h3,.product-price,.product-price-wrap .bfx-price,.product-swatch-wrap{
      @include black-paragraph-13-font;
      color:$light-black;
      margin-bottom:4px;
      a{
        @include black-paragraph-13-font;
        color:$light-black !important;

        &:after {
            content: "//";
            position: relative;
            padding-right:1px;
            margin-left: 4px;
        }

        &:last-child:after {
            display:none;
            margin-left: 0px !important;
            padding-right: 0px !important;
        }

      }
    }

    .product-price-wrap.bfx-price {
        line-height: 16px;
    }
}

.was{
      color:#777777 !important;
      text-decoration: line-through !important;

      .bfx-price {
        color:#777777 !important;
        text-decoration: line-through !important;
      }
}

.product{

   &:hover .product-quickview{
      display:block;
   }
}

#product-price.has-compare-price .product-price{color:$black-color !important; margin-right:4px;}

.load-more {
    width: 100%;
}
#bc-sf-filter-load-more {  
  padding:0px !important;
  .bc-sf-filter-load-more-button{
    @include back-black-medi-button-load-more-pro;
    margin-bottom: 89px;
  }
}


/*product-show-dot*/
.product-column-show {
    position: relative;
    padding-left: 0px;
    margin-bottom: 0px;
    cursor: pointer;
    font-size: 22px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    width: 36px;
    display: inline-block;
    height: 11px;
}

.product-column-show .checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 10px;
    width: 36px;
    background-color: transparent;
    display: flex;
    border: 0px;

    .squer {
      width: 7.8px !important;
      height: 10px !important;
      background-color: #D8D8D8;
      display: inline-block;
      margin-right: 1px;
  }
}

.product-column-show .checkmark.active .squer{
    background-color: #000;
}

.three-four-product-show-buton {
    text-align: right;
    line-height: 10px;
    margin-top: 26px;
    padding:$padding-left-right;
    position: relative;
    z-index: 999;
    display: inline-block;
    width: 100%;

    @include mq('phone-and-tablet'){display:none;}
}
