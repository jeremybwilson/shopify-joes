@charset "UTF-8";
/*men_women_part*/

.twin-promos .men_women_jeans_part{margin-top:$mt-8; width:$full-width;  max-height: 650px;  margin-bottom: 0px; }

.women_part {
    background-image: url(../images/women.png);
    width:calc(50% - 4px);
    float:left;
}

.men_part {
    background-image: url(../images/men.png);
    width:calc(50% - 4px);
    float:right;
}

.men_women_seam_css{
    height: 650px;
    background-repeat: no-repeat;
    background-size: cover;
    position:relative;
    background-position: center;

    h2 {
      @include banner-up-head-text-font;
    }
}

.text-on-images{
    @include banner-up-text;

    h1{
       @include banner-up-head-text-font;
    }

    p{
      @include banner-peregraph-text-white;
    }
}


.flawless_banner{
    height:754px;
    margin-top: $mt-8;
    background-image: url(../images/full-banner.png);
}




#shopify-section-home-twin_promos .single-promo {
    margin: 0 0 !important;

    a {
        display: inline-block;
        width: 100%;

        picture {
            width: 100% !important;
            display: inline-block;
            height: 100%;

            img{
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                max-height:650px;
                min-height:650px;
                overflow: hidden;
            }
        }

        .box-ratio{
            padding-bottom: 0px;
        }

    }

    &:first-child{
        padding-right: 4px;
    }
    &:nth-child(3){
        padding-left: 4px;
    }
}

#shopify-section-home-twin_promos .row .desktop-6 {
    width: 50%;
    position: relative;
}

div#text-promo-home-twin_promos {
    margin-bottom: 0px;
}


#shopify-section-home-full_width_promo .single-promo {

    a {
        display: inline-block;
        width: 100%;

        picture {
            width: 100% !important;
            display: inline-block;
            height: 100%;

            img{
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                max-height: 754px;
                min-height: 754px;
                overflow: hidden;
            }
        }

        .box-ratio{
            padding-bottom: 0px;
        }

    }
}

#shopify-section-home-full_width_promo #promo-full-width-promo {
    width: 100%;
    margin: 0 0;
    position: relative;
}

#shopify-section-home-full_width_promo #promo-full-width-promo {
    max-height: 753px;
}


.white-butt{
    @include white-butt;
}


