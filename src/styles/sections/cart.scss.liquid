#shopping-cart {
  
  margin:0px; 

  h2 {
    @include heading-black;
    margin-bottom: 25px;

    @include mq('tablet-and-up') {
      text-align: left;
    }
  }
}

#cartform {
  margin-top: 0;
  table {
    width: 100%;
    border-collapse: collapse;

    thead {

      @include mq('phone') {
        display: none;
      }
      th {
        padding: 0;
        @include mq('tablet-and-up') {
          padding: 10px;
          border-bottom: solid 1px $color--border-gray;
        }

        label {
          @include h4-head;
          text-transform: uppercase;
        }
      }
    }
    tbody {
      tr {
        @include mq('phone') {
          @include flexbox;
          @include flex-wrap(wrap);
          @include justify-content(flex-start); 
          padding-bottom: 20px;
          border-bottom: solid 1px $color--border-gray;
        }
      }
      td {
        padding: 10px;
        @include mq('phone') {
          border-bottom: none;
          padding: 0;
        }
        @include mq('tablet-and-up') {
          border-bottom: solid 1px $color--border-gray;
        }
      }
    }
  }   
}
th.cart--remove {
  label {
    display: none;
  }
}

.cart-item {
  @include flexbox;
  @include align-items(center);

  @include mq('phone') {
    @include justify-content(space-between);
    width: 100%;
    border-bottom: none;    
  }
  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
  }
}
.cart-image {
  margin-left:0px;
  margin-right: 10px;
  width:100%;
  
  img{
    width: 100%;
    max-height: 139px;
    object-fit: cover;
    object-position: center;
  }
}
.cart-title {
  @include h5-heading;
  color:$black-color;
  text-align: left;
  width: 90%;
  text-transform:uppercase;

  @include mq('tablet-and-up') {
    width: auto;
    text-align:left;
    
  }

   @include mq('phone') {
      font-size:$font-14-mo;
   }
}


#cartform table tbody tr{
   @include mq('phone'){
    padding-top:15px;
   }
}

.shoprunner-indicator {
    margin-top: 5px;
    display: inline-block;
    width: 100%;
    margin-bottom: 10px;
}

p.affirm-as-low-as{
  @include paragraph-font;
  margin-bottom: 15px;
  padding: 0 10px;
}


.cart-remove {
  text-transform: uppercase;

  @include mq('phone') {
    @include flexbox;
    @include justify-content(flex-start);
    @include order(5);
    width: 100%;
  }

  a {
    @include black-paragraph-14-font;
    @include mq('phone') {
      margin-left: auto;
      margin-right: auto;      
    }
  }

  &:hover {
    color: $color--accent-1;
  }

  i.fa {
    display: none;
  }
}
.cart-price,
.cart-quantity,
.cart--total-price {
  @include black-paragraph-14-font;

  @include mq('phone') {
    @include flexbox;
    @include align-items(center);    
  }

}
.cart-price {
  @include mq('phone') {
    width: 40%;
    text-align: left;
  }
  @include mq('tablet-and-up') {
    text-align: center;
  }

  & > div {
    display: inline;
  }
  .onsale {
    color: {{ settings.sale_color }};
  }
  .was {
    color: $color--primary-2;
  }
}

.cart-quantity {
  @include mq('phone') {
    width: 20%;
  }
  margin-left: auto;
  text-align: center;

  input {
    margin-bottom: 0;
    text-indent: 0;
    text-align: center;
    @include black-paragraph-14-font;
    border:$border-grey-1;

      @include mq('phone') {
        margin: 0px auto 10px auto;
      }
  }
}

.cart--total-price {
  @include mq('phone') {
    width: 40%;
  }
  margin-left: auto;
  text-align: right;

  span {
    margin-left: auto;
  }

  label {
    text-align: right;
  }
}


