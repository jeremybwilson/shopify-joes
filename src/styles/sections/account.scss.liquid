.account-header {
  h2{
    @include heading-black;
    margin-bottom: 34px;
    margin-top: 14px;
    text-align: center;

    @include mq('phone'){
        margin-top: 26px;
        margin-bottom: 30px;
    }
  }
}

.large-form {
    width: 100%;
    display: inline-block;
    margin-bottom: 25px;

    @include mq('phone'){
       margin-bottom: 20px;
       line-height: 20px;
    }
}

.template-login, .template-register, .customers-reset_password {
  #content{
       @include container;

       @include mq('laptop'){
          @include padding-left-right-mobile15;
       }
   }
}

#forgot_password {
    display: inline-block;
    float: right;
    margin-top: 12px;

    @include mq('tablet'){
       width: 100%;
    }

    @include mq('phone'){
       margin-top:32px;
    }

    a{
        color: $color--accent-1;
        text-decoration: underline !IMPORTANT;
        font-size:$font-12;
        text-transform: uppercase;

       @include mq('phone'){
          font-size:$font-11-mo;
       }
    }
}

.cancel_button{
   @include primary-button;
   display:inline-block;
}

.note{
  @include black-paragraph-13-font;
  margin-bottom:15px;
  display:inline-block;
  position: relative;
  top: -2px;
}

.errors {
    padding-left: 0px;
    font-size: 12px;
    line-height: 16px;
}


.customers-account{
  #content{
     @include container;
     margin-bottom: 89px;
        @include mq('laptop'){
            padding:$padding-left-right-mobile15;
            margin-bottom:65px;
        }
  }

  .newsletter-newsletter{
    border-top:$border-grey-1;
    padding-top: 65px;
  }
}

.account-page {
    display: inline-block;
    width: 100%;
    margin-bottom: 89px;
    
    @include mq('phone'){
       margin-bottom:60px;
    }

    #template {
       margin: 0 0 !important;
       width: 45%;

       @include mq('phone'){
          width:100%;   
          padding-bottom:60px;
       }

       #customer {
            margin: 0 0 !important;
            @include mq('phone'){
              width:100%;   
            }
       }
    }

    #create-customer {
        margin: 0 0 !important;
        float: right;
        width: 45%;

        @include mq('phone'){
          width:100%;   
        }
    }
}

#customer-wrapper {
  h2 {
    @include heading-black;
    margin-bottom: 25px;
  }
  #view_address{
    @include h5-heading;
  }
  h5 {
    @include h5-heading;
  }
  .address {
      width: 100%;
      
      P{
        @include black-paragraph-13-font;
      }
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    color: $color--gray-1;
    font-family: $sans;
  }

  .name-email-detail{
    width:40%;
    float: left;
    
    @include mq('phone'){
      width:100%;
    }
  }
  .customer-order{
    width:60%;
    float: left;
    
    p{
      @include black-paragraph-13-font;
    }

    @include mq('phone'){
      width:100%;
      margin-top:30px;
    }

    .overflow-scroll {
        width: 100%;
        max-height: 350px;
        overflow: auto;
    }

    table {
        border-collapse: collapse;
        width: 100%;

        th{
          @include black-paragraph-13-font;
          font-weight:$bold;
          text-align: left;
          padding: 6px 6px;
          border:$border-grey-1;
          min-width: 100px;

          @include mq('laptop'){
             min-width: 147px;
          }
        }

        td{
          border:$border-grey-1 ;
          min-width: 100px;
          
          @include mq('laptop'){
             min-width: 147px;
          }

          span,a{
            @include black-paragraph-13-font;
            margin-bottom: 0px;
            text-align: left;
            padding: 6px 6px;
          }
        }
    }
  }

  #sign_out {
    @include subscribe-button;
    display: inline-block;

    @include mq('phone'){
      margin-top: 10px;
    }
  }
  .secondary.button.subscribe-button{
     display:inline-block;
  }

  .button {
     @include subscribe-button;
     letter-spacing: 0.3px;
     margin-bottom:$mb-0;
  }

  #account-msg {
    display: block;
    width: 100%;
    text-align: center;

    h2 {
      @include heading-black;
    }
    p {
      @include black-paragraph-13-font;
    }
    hr {
       margin:30px 0;
    }
  }
}

.reset-password-page {
    max-width: 45%;
    margin: 75px auto;
}


