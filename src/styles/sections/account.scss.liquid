.account-header {
  position: relative;

  h1 {
    color: $color--primary-1;
  }
}

.large-form {
    width: 100%;
    display: inline-block;
    margin-bottom: 25px;

    @include mq('phone'){
       margin-bottom: 20px;
       line-height: 20px;
    }
}

#forgot_password {
    display: inline-block;
    float: right;
    margin-top: 12px;

    @include mq('tablet'){
       width: 100%;
    }

    @include mq('phone'){
       margin-top:32px;
    }

    a{
        color: $color--accent-1;
        text-decoration: underline !IMPORTANT;
        font-size:$font-12;
        text-transform: uppercase;

       @include mq('phone'){
          font-size:$font-11-mo;
       }
    }
}

.cancel_button{
   @include primary-button;
   display:inline-block;
}

.note{
  @include black-paragraph-13-font;
  margin-bottom:15px;
  display:inline-block;
  position: relative;
  top: -2px;
}

.errors {
    padding-left: 15px;
}

.account-page {
    display: inline-block;
    width: 100%;
    margin-bottom: 89px;
    
    @include mq('phone'){
       margin-bottom:60px;
    }

    #template {
       margin: 0 0 !important;
       width: 45%;

       @include mq('phone'){
          width:100%;   
          padding-bottom:60px;
       }

       #customer {
            margin: 0 0 !important;
            @include mq('phone'){
              width:100%;   
            }
       }
    }

    #create-customer {
        margin: 0 0 !important;
        float: right;
        width: 45%;

        @include mq('phone'){
          width:100%;   
        }
    }
}

#customer-wrapper {
  h2 {
    @include headin-black;
    margin-bottom: 25px;
  }
  h5 {
    @include h5;
    line-height: 1.6875em;
    letter-spacing: .025em;
    color: $color--primary-1;    
    font-weight: 700;
  }
  label {
    @include suv-headin-light;
    text-transform: uppercase;

    @include mq('phone'){
          font-size:$font-14-mo;
    }
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    color: $color--gray-1;
    font-family: $sans;
  }
  a {
    color: $color--accent-1;
  }

  #sign_out {
    @include h6;
    @include fontSize( 13px );  
    position: relative;
    padding: 13px 16px;
    top: 20px;
    background: $color--accent-1;
    color: $color--white;
    outline: none;
    cursor: pointer;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;

    &:hover {
      background: $color--primary-1;
    }
}
  .secondary.button.subscribe-button{
     display:inline-block;
  }

  .button {
     @include subscribe-button;
     letter-spacing: 0.3px;
     margin-bottom:$mb-0;
  }
  #customer_orders {
    @include mq('phone') {
      margin-top: 50px;
    }
  }

  #account-msg {
    display: block;
    width: 100%;
    text-align: center;

    h2 {
      @include headin-black;
    }
    p {
      @include black-paragraph-13-font;
    }
    hr {
       margin:30px 0;
    }
  }
}
