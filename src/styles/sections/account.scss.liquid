body.customers-account{
  #refer-model{
    position: fixed;
    z-index: 99;
    padding-top: 0px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: #000;
    background-color: rgba(0,0,0,0.4);
    display:none;
    z-index: 9999;
    .custom-model{
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #mmWrapper{
      margin: auto;
      position: relative;
      max-height: 90vh;
      overflow-y: auto;
      @include mq('tablet'){
        width:80%;
      }
      @include mq('phone'){
        width:90%;
      }
      .close{
        background-repeat: no-repeat;
        background-size: 13px;
        position: absolute;
        top: 20px;
        right: 5px;
        z-index: 99;
        color: #000000;
        font-size: 35px;
        padding: 5px;
        cursor:pointer;
      }
    }
  }
}
