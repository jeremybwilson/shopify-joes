@charset "UTF-8";

/*as-seen-on*/ 
.heading-part{
  margin-bottom:$mb-20;
  h2{
    @include headin-black;
  }
  p{
    @include suv-headin-light;
  }
  b{font-weight:$bold;}
}


.as-see-part-slider{ 
  overflow:hidden;

  .loop_part{

   width: 33%;
   display: inline-block;
   
   &:first-child img{padding-right:24px;}
   &:nth-child(2) img{padding: 0 10px;}
   &:last-child img{padding-left: 22px;}

 
   img{
    width: 100%;
    object-fit: cover;
    object-position: center;
    height: 100%;
    height: 348px;
   }

  }

  .slick-arrow {
    display: none !important;
  }
  .slick-slide {
      display: inline-block;
  }

  .slick-active{
     padding-left:7px !important;
  
  }
  .slick-current{
     padding-right:7px !important; padding-left: 0px !important;
  }


  .slick-dots{
    margin:10px auto 0 auto;
    width: fit-content;
    line-height: 18px;

    button {
      display: none;
    }

    li {
      width: 10px;
      height: 10px;
      background-color: #979797;
      border-radius: 50%;
      display: inline-block;
      margin: 0 10px;
    }

    .slick-active {
    background-color: #000;
    }

  }
}
.center_butt{text-align:center;}
.center_butt a{display:inline-block;}
.bold{font-weight:$bold;}
.as-see-on-part {
   margin:$margin-tb-100;
}

.black_butt {
  @include black-butt;
  margin: 35px auto 0px auto;
  display:inline-block;
}

.as-see-on-part .cta{text-align:center;}

.as-see-on-part .slick-dots {
    display: none;
}

#instafeed-home-instagram_feed{
   height: 348px;
}

@include mq('lap-and-up'){
    .page-wrap .index-sections .index-section{
       margin-bottom:0px !important;
    }
}

