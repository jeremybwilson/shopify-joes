@charset "UTF-8";

/*as-seen-on*/ 
.heading-part{
  margin-bottom:18px;
  h2{
    @include heading-black;
    color: {{ settings.homepage_instagram_header }};
  }
  p{
    @include suv-headin-light;
    color: {{ settings.homepage_instagram_text }};

    @include mq('phone'){
       font-size:$font-12-mo;
       line-height: 16px;
    }
  }
  b{font-weight:$bold;}

   @include mq('phone'){margin-bottom:12px;}
}


.as-see-part-slider{ 
  overflow:hidden;

  .loop-part{

   width: 33%;
   display: inline-block;
   
   &:first-child img{padding-right:19px;}
   &:nth-child(2) img{padding: 0 10px;}
   &:last-child img{padding-left: 22px;}

   @include mq('tablet'){
      width: 32.9%;
   }

    @include mq('phone'){
       width:100%;

       &:first-child img{padding-right:0px;}
       &:nth-child(2) img{padding: 0 0px;}
       &:last-child img{padding-left:0px;}
    }
 
   img{
    width: 100%;
    object-fit: cover;
    object-position: center;
    height: 100%;
    height: 349px;

       @include mq('phone'){
          height:296px; 
       }
   }

  }

  .slick-arrow {
    display: none !important;
  }
  .slick-slide {
      display: inline-block;
      
      @include mq('mobile-landscap'){
         width: 12.5% !important;
      }
  }

  .slick-active{
     padding-left:7px !important;

     @include mq('mobile-potrait-small'){
        padding-left:0px !important;
     }
  
  }
  .slick-current{
     padding-right:7px !important; padding-left: 0px !important;
     @include mq('mobile-potrait-small'){
        padding-right:0px !important;
     }
  }


  .slick-dots{
    margin:7px auto 0 auto;
    width: fit-content;
    line-height: 18px;

    button {
      display: none;
    }

    li {
      width: 10px;
      height: 10px;
      background-color: #979797;
      border-radius: 50%;
      display: inline-block;
      margin: 0 10px;
    }

    .slick-active {
    background-color: #000;
    }

  }
}
.bold{font-weight:$bold;}

.as-see-on-part {
   margin:$margin-tb-100;
   @include mq('phone-and-tablet'){margin:24px 0px 68px 0;}

   .slick-slide{
      padding: 0 8px !IMPORTANT;

      .ls-carousel-photo{
          margin: 0px 0px !important;
          width: 100% !important;
      }
   }

   .slick-list.draggable {
      margin: 0 -7px !important;
   }
}

.black-button {
  @include black-button;
  margin: 35px auto 0px auto;
  display:inline-block;
}

.as-see-on-part .cta{text-align:center;}

.as-see-on-part .slick-dots {
    display: none;
}

#instafeed-home-instagram_feed{
   height: 349px;
   @include mq('phone-and-tablet'){height: 340px;}
}

@include mq('phone'){
   .as-see-part-slider .loop_part{
      img{padding:0px !important;  height: 294px;}
   }
}
@include mq('lap-and-up'){
    .page-wrap .index-sections .index-section{
       margin-bottom:0px !important;
    }
}

.flex-center{
  display:flex;
  align-items: center;
}

.instagram-icon{ 
   display: inline-block;
   height: 30px;
   margin-right: 5px;

   .icon-instagram {
      width: 30px;
      height: 30px;

      path{
        fill: #000;
      }
   }
}

