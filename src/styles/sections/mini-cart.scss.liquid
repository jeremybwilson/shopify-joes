// Mini-Cart

// Because drawer has display:none property
.is-transitioning {
  display: block !important;
  visibility: visible !important;
}

.drawer__header {
  @include flexbox;
  @include align-items(center);
  @include justify-content(space-between);
  border-bottom: 1px solid #ededed;
  padding-bottom: 15px;
  margin-bottom:10px;

  h3 {
    @include fontDim(18px,18px,0);
    font-weight: $font-weight--black;
    text-transform: uppercase;
    color: $color--primary-1;
  }
}
.drawer__close {
  margin-left: auto;
  color: $color--gray-1;

  span {
    display: none;
    text-indent: -9999em;
  }
  &:hover {
    color: $color--accent-1;
  }
  &:before {
    @include h7;
    @include fontSize(28px);
    content: 'X';
    font-weight: $font-weight--book;
  }
}

// Product Item

.ajaxcart__product {
  
    margin: 15px 0;
    border-bottom: solid 1px rgba(227,227,227,0.65);
    padding: 15px 0;

  img{    
    max-width: 95%;
    max-height: 120px;
    min-height: 120px;
    object-fit: cover;
    object-position: center;
  }

  p {
    @include black-paragraph-13-font;
    text-transform:capitalize;
    margin: 0px 0 4px 0;

    strong.bfx-price{font-weight:$weight-normal;}
  }
}
.ajaxcart__product-name {
  @include black-paragraph-13-font;
  text-transform:capitalize;
}
.ajaxcart__product-meta {
  @include black-paragraph-13-font;
  text-transform:capitalize;
  display: block;
  margin-top: 4px;
}

.quantity-increment {
    width: 35px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    padding: 0 14px;

    color:$white-color;
    font-weight: $font-weight--bold;

    &:hover {
      background: $color--primary-1;
      color: $color--white;
    }
}

.ajaxcart__qty{
     input{
         @include black-paragraph-13-font;
         text-transform:capitalize;
         color:$black-color;
         height: 30px;
         text-align: center;
         max-width: 80px;
         border: 1px solid #d2d2d2;
      }
}

.ajaxcart__product.is-loading {
  pointer-events: none;
  position: relative;

  &:after {
    content: 'Updating...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 6px 8px;
    background: $color--primary-1;
    @include black-paragraph-13-font;
    text-transform:capitalize;
    text-transform: uppercase;
    color: $color--white;
  }
  
  .ajaxcart.row {
    opacity: .4;
  }

}

.ajaxcart__remove {
  display: block;
  clear: both;
  cursor: pointer;
  text-decoration: underline;
  @include black-paragraph-13-font;
}

.ajaxcart__inner {
    height: calc(100vh - 220px);
    overflow-x: overlay;
    margin-bottom: 25px;
    margin-top:15px;

    @include mq('phone'){
       margin-top: 0px !important;
       height: calc(100vh - 200px);
    }
}



#CartContainer{
  P{@include black-paragraph-13-font;}
  .ajaxcart__footer {
     width:$full-width !important;  

     @include mq('phone'){
        padding:0px;
     }

     p{
       @include black-paragraph-13-font;
       color:$black-color;
       margin: 0 0 10px 0;
     }
    
      .cart-total-price, .cart-total-price{
        @include h5-heading;
        margin: 0 0 10px 0;
      }
    
     .text-right.cart-total-price{text-align: right;}
  }
}


body ._SRD .srd_iconline{
   .srd_msg{padding-left: 13px !important;}
   .srd_icon{
        background-size: 65px;
        background-position-y: 4px;
        width: 11px !important;
    }
} 

// Checkout

button.cart__checkout {
  @include subscribe-button;
  margin-top: 0px !important;
}


/*popup-cart*/

.my-cart-popup {
    width: 100%;
    background-color: #fff;
    max-width: 400px;
    height: 100%;
    padding: 15px;
    position:fixed;
    right:-400px;
    top: 0;
    -webkit-transition: all 1s;
    -o-transition: all 1s;
    transition: all 1s;
    z-index: 9999;

    .ajaxcart.row {
        width: 100% !important;

        @include mq('phone'){
           padding:0px;
        }
    }

}

.js-drawer-open-right .my-cart-popup{right:0;}

.js-drawer-open.js-drawer-open-right {
    position: fixed;
    width:100%; 
}


.drawer__close{
    position:relative;
    &:before{
      content: "";
      background-image: url(../assets/cross.svg);
      width: 25px;
      height: 25px;
      background-repeat: no-repeat;
      background-size: 25px;
      z-index: 9999;
      position: absolute;
      right: 0;
      top: -14px;
    }
}




