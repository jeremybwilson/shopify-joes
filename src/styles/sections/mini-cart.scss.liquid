// Mini-Cart

// Because drawer has display:none property
.is-transitioning {
  display: block !important;
  visibility: visible !important;
}

.drawer__header {
  @include flexbox;
  @include align-items(center);
  @include justify-content(space-between);
  border-bottom: 1px solid #ededed;
  padding:12px 0 8px 15px;
  margin-bottom:0px;

  h3 {
    @include fontDim(18px,18px,0);
    font-weight: $font-weight--black;
    text-transform: uppercase;
    color: $color--primary-1;
  }
}
.drawer__close {
  margin-left: auto;
  color: $color--gray-1;

  span {
    display: none;
    text-indent: -9999em;
  }
  &:hover {
    color: $color--accent-1;
  }
  &:before {
    @include h7;
    @include fontSize(28px);
    content: 'X';
    font-weight: $font-weight--book;
  }
}

// Product Item

.ajaxcart__product .desktop-8 {
    width: 55% !important;
}

.ajaxcart__product .grid__item.desktop-4 {
    width: 40% !important;
    margin: 0 5px 0 0px;
}

.ajaxcart__product {
    margin: 6px 0;
    border-bottom: solid 1px rgba(227,227,227,0.65);
    padding:6px 0;

    &:last-child{
        border-color: transparent;
    }

  img{    
    max-height: 139px;
    max-width:100px;
    width:100%;
  }

  p {
    @include black-paragraph-13-font;
    text-transform:capitalize;
    margin: 0px 0 4px 0;

    strong.bfx-price{font-weight:$weight-normal;}
  }
}

/*.ajaxcart__qty {
    display: none;
}*/

.ajaxcart__product-name {
  @include h5-heading;
  text-transform:capitalize;
}
.ajaxcart__product-meta {
  @include paragraph-font;
  text-transform:capitalize;
  display: block;
  color:$light-black;
  margin-top: 4px;
}

.quantity-increment {
    width: 35px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    padding: 0 14px;

    color:$white-color;
    font-weight: $font-weight--bold;

    &:hover {
      background: $color--primary-1;
      color: $color--white;
    }
}

.ajaxcart__qty{
     input{
         @include black-paragraph-13-font;
         text-transform:capitalize;
         color:$black-color;
         height: 30px;
         text-align: center;
         max-width: 50px;
         border: 1px solid #d2d2d2;
         border-radius:0px !important;
      }
}

.ajaxcart__product.is-loading {
  pointer-events: none;
  position: relative;

  &:after {
    content: 'Updating...';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 6px 8px;
    background: $color--primary-1;
    @include black-paragraph-13-font;
    text-transform:capitalize;
    text-transform: uppercase;
    color: $color--white;
  }
  
  .ajaxcart.row {
    opacity: .4;
  }

}

.ajaxcart__edit{
  @include black-paragraph-13-font;
  text-decoration:underline !important;
  text-decoration: underline;
  flex: 1;
}

.timber-cart-edit-remove {
    display: flex;
    align-items: baseline;
    margin-top:6px;
}


.ajaxcart__remove {
  display: block;
  clear: both;
  cursor: pointer;
  text-decoration: underline;
  @include black-paragraph-13-font;
  color:#9B9B9B;
  text-decoration:underline !important;
}

.ajaxcart__inner {
    height: calc(100vh - 459px);
    overflow-x: overlay;
    margin-bottom:9px;
    margin-top:15px;

    @include mq('phone'){
       margin-top: 0px !important;
       height:100%;
    }
}

@include mq('phone'){
  #CartContainer {
      height: calc(100vh - 60px);
      overflow-y: auto;
  }
}


#CartContainer{
  P{@include black-paragraph-13-font;}
  .ajaxcart__footer {
     width:$full-width !important;  
     padding-top: 13px;
     border-top:$border-grey-1;

     p{
       @include paragraph-font;
       color:$black-color;
       margin: 0 0 15px 0;
       color:$light-black;
     }

      .text-center {
        text-align: center;
      }
    
      .cart-total-price, .cart-total-price{
        @include h5-heading;
        margin: 0 0 7px 0;
      }
    
     .text-right.cart-total-price{text-align: right;}
  }
}


body ._SRD .srd_iconline{
   .srd_msg{padding-left: 13px !important; @include paragraph-font; color:$light-black;}
   .srd_icon{
        background-size: 65px;
        background-position-y:3px;
        width: 11px !important;
        height: 16px;
    }
} 


.payment-button{
    max-width: 255px;
    height: 40px;
    background-repeat: no-repeat;
    width: 100%;
    background-position: center;
    display: inline-block;
    border-radius: 3px;
    margin-bottom: 8px;

    @include mq('phone'){
      height:40px;
      line-height:38px;
    }

    .test-only {
      background-color: rgba(0,0,0,0.5);
      width: 100%;
      height: 100%;
      display: inline-block;
      text-align: center;
      line-height: 40px;
      color: #fff;
      font-size: 13px;
      font-weight: bold;
      text-transform: uppercase;
    }
}

.paypal{background-image: url(../assets/paypal.png); background-size: 75px; background-color: #FEC439;}
.amazon{background-image: url(../assets/amazon.png); background-size: 100px; background-position-y: 12px; background-color: #F9D675;}
.applepay{background-image: url(../assets/apple-pay.png); background-size:50px; background-position-y: 11px; background-color:#ffe395;}



// Checkout

button.cart__checkout {
  @include subscribe-button;
  margin-top: 0px !important;
  min-width:100%;
  margin-bottom:8px;
  letter-spacing: 1.02px;

  @include mq('phone'){
    min-width: 100%;
    height: 48px;
    text-align: center;
    line-height: 43px;
    font-size: 15px;
  }
}

.additional_checkout_buttons .additional-checkout-button--google-pay {
    width: 100% !important;

    .gpay-iframe{
      height:40px !important;
    }
}



/*popup-cart*/

.my-cart-popup {
    width: 100%;
    background-color: #fff;
    max-width:275px;
    height: 100%;
    padding: 10px;
    position:fixed;
    right:-400px;
    top: 0;
    -webkit-transition: all 1s;
    -o-transition: all 1s;
    transition: all 1s;
    z-index: 10000; // Header floating nav bar is set to 9999, must be higher than that

    .ajaxcart.row {
        width: 100% !important;
    }

    h5{
      @include h5-heading;
    }

}

.js-drawer-open-right .my-cart-popup{right:0;}

.js-drawer-open.js-drawer-open-right {
    position: fixed;
    width:100%; 
}


.drawer__close{
    position:relative;
    &:before{
      content: "";
      background-image: url(../assets/cross.svg);
      width:11px;
      height:11px;
      background-repeat: no-repeat;
      background-size:11px;
      z-index: 9999;
      position: absolute;
      right: 10px;
      top: -13px;
    }
}




