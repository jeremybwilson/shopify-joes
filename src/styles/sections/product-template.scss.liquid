.product {
   section#newsletter-social {
      border-top:$border-grey-1;
      padding-top: 78px;

      @include mq('phone'){
         padding-top:65px;
      }
   }

   #content {
      padding-bottom: 67px;
   }
}

.product--mobile-header {
  position: relative;
  padding: 12px 20px 12px;
  margin-top: 15px;
  margin-bottom: 25px;

  @include mq('tablet-and-up') {
    display: none;
  }

  &:after {
    position: absolute;
    content: '';
    top: 100%;
    left: 0;
    height: 25px;
    width: 100%;
    opacity: .25;

    background: #ffffff;
    background: -moz-linear-gradient(top, #d9d9d9 0%, #ffffff 100%);
    background: -webkit-linear-gradient(top, #d9d9d9 0%,#ffffff 100%);
    background: linear-gradient(to bottom, #d9d9d9 0%,#ffffff 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d9d9d9', endColorstr='#ffffff',GradientType=0 );
  }

  .mobile-header--top {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
  }

  .product-title {
    color: $color--primary-2;
    @include fontDim(15px,16px,0);
    font-weight: $font-weight--black;
    text-transform: uppercase;
  }
  .money {
    @include fontSize(15px);
  }

  .add {
    margin-left: 40px;
    max-width: 92px;
    padding: 6px 8px;
    margin-right: 0;
    @include fontSize(12px);
    line-height: 14px / 12px * 1em;
    white-space: normal;
  }
  .add[disabled] {
    @include fontSize(8px);
  }
  .errors {
    width: 100%;
  }
}

#shopify-section-product-template {
  @include mq('tablet-and-up') {
    margin-top:23px;
  }
}

.row.product-details--top {
  @include flexbox;
  @include flex-direction(row);
  @include align-items(flex-start);
  @include justify-content(space-between);

  @include mq('tablet-and-up') {
    @include main-container;
  }

  @include mq('phone'){
     margin:33px 10px 0 10px;; 
     width: calc(100% - 20px);
  }

  @include mq('tablet'){
    flex-direction: column;
  }
}


/* Product Images Snippet
 * ---------------------------------------------- */

@import url('../snippets/product-images.scss.liquid');

#product-price {
