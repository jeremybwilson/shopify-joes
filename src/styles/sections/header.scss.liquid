.accordion-toggle{
    position:relative;
    &:before{
        content: "";
        position: absolute;
        width: 8px;
        height: 2px;
        background-color: #000;
        right: 28px;
        top: 25px;
    }

    &:after{
        content: "";
        position: absolute;
        width: 2px;
        height: 8px;
        background-color: #000;
        right: 31px;
        top: 22px;
    }
}

.accordion-toggle.open:after {
    display: none;
}
.accordion-header{
    font-size: 15px;
    font-weight: bold;
    text-transform: uppercase;
