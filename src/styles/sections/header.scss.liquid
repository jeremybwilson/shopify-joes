/*header*/

*{outline: none !important; font-family: 'Montserrat', sans-serif !important;}
body{overflow-x: hidden; font-weight:normal;}
section{width:$full-width; float:$float-left;}
ul{padding:0 0px; margin: 0px;}

.template-login #content{
   @include container;
   
   @include mq('laptop'){
      @include padding-left-right-mobile15;
   }
}

body.cart #content{
   @include container;  
   padding-top:0px;
   padding-bottom:89px;

     @include mq('phone'){
        padding-bottom:60px;
     }
}
body.cart #breadcrumb{
  display:block;
}

#content {
    width: 100%;
    padding: 0 0;
}

.container-fluid {
    max-width:$container-fluid-width;
    margin: $margin-le-ri-auto;

    @include mq('laptop'){
        padding:$padding-left-right-mobile15;
    }
}


.collection-breadcrumb-wrap {
    width:$full-width;
    margin: 0 0 !important;
}

#breadcrumb {
   position: unset; 
   margin: 30px 0 10px 0; 
   padding:$padding-left-right; 
   width:$full-width;

   @include mq('phone'){
      text-align: center;
      margin: 10px 0 10px 0;
      @include padding-left-right-mobile15;
   }

   a,span{
     @include black-peregraph-13-font;
     text-transform: uppercase;
   }

   #results-count {
      display: none;
}

}
/**/

.bc-sf-search-suggestion-wrapper{
    top: 95px !important;
}

.isStuck {
    width: 100%;
    z-index: 9999;
}


.top-discount-part {
    //background-color: $black-color;
    text-align: center;
    max-height: 35px;

    #single-promo-wrapper{
       padding: 5px 0 6px 0;
    }  

   #single-promo-wrapper, .promo-banner.one{
      background-color: {{ settings.announcement_bg_one}}; //$black-color;
   }
   .promo-banner.two{
      background-color: {{ settings.announcement_bg_two}}; //$black-color;
   }

    a{
      @include peregraph-font;
      color: {{ settings.announcement_text_color}}; //$white-color;
      font-weight:$weight-light;
      text-decoration:none !important;
    }

    #promo-arrow-left {
       display:none;
    }

    .promo-banner.two{display:none;}

    #promo-arrow-right {
        display:none;
      }

     .show-promo-two{ 
       .promo-banner.one {
         display: none;
       }
       .promo-banner.two {
         display: block;
       }
     }

}

#nav-menu-desktop-list .nav-primary-link:hover>a{
      border-bottom: 1px solid #000000;
}

#nav{display:block;}

.header-back {
    display: flex;
    align-items:flex-start;
    flex-wrap: wrap;
    padding:$padding-left-right;
    padding-top: 30px;
    padding-bottom:0px;
    background-color: {{ settings.header_background }}; //$white-color;
    border-bottom: $border-grey-1;

    .shipping-left{
	     flex:$flex-1;
  	   text-transform: uppercase;
  	   margin-bottom:$mb-0;	
       line-height:16px;
      
        a{
            @include black-peregraph-13-font;
            
            @include mq('laptop'){
                font-size: $font-12;
            }
        }

    }

    .logo-part{

        flex:$flex-1;

        img{
          max-width: 200px;
    	    margin: 0px auto !important;
    	    display: block;

          @include mq('laptop'){
             max-width:160px;
          }
        }
    }

    .right-search-cart-part{

        flex:$flex-1;
        text-align: right;

        display: flex;
        justify-content: flex-end;
        align-items: flex-start;
        position: relative;
        top:1px;

        li{
          display: inline-block;
          list-style: none !important;
          margin: 0 10px;
          line-height: 16px;

          .icon.icon-cart-text {
             display: inline-block;
            }

           &:first-child{
             margin-left:0px; 
             position:relative;
           }

           &:last-child{
             margin-right:0px;
           }

           @include mq('laptop'){
              margin: 0 5px;
           }

  		    a{
  		     @include black-peregraph-13-font;
           margin-bottom:$mb-0;
  		     text-decoration:none !important;	 
           text-transform: uppercase; 

           @include mq('laptop'){
              font-size: $font-12;
           }

  		    } 
        }
        
        .nav-wishlist{line-height: 22px;}
 
    }
}	


.search {
    display: flex;
    align-items: center;
}


.Search-button {
    width: 20px;
    height:18px;
    padding: 0 0;
    display: inline-block;
    text-align: right;
    line-height: 19px;
    border: 0px;
    background-color: transparent;
    position: relative;


    @include mq('laptop'){
      width:22px;
    }

    img {
	    width: 100%;
	    object-position: center;
	}
}
.search-header {
    border: 0px;
    border-bottom: 1px solid $field-border-color;
    line-height: 18px;
    max-width: 92px;
    width: 100%;
    font-size: $font-13;
    box-shadow: none !important;
    height: 16px;

    @include mq('laptop'){
      max-width:70px;
    }
}

.not-fill-like {
    max-width: 14px;
    width:14px;

    @include mq('laptop'){
      max-width: 12px;
      width:12px;
    }
}

.has-sub-menu {
    .megamenu {
        position: absolute;
        width: 100%;
        left: 0;
        background-color: #fff;
        padding: 15px 15px;
        z-index: 99;
        top: 41px;
        min-width: 180px;
        box-shadow: 0px 8px 8px hsla(0, 0%, 0%, 0.39);
        display:none;

        h5.nav-sub-header a {
            font-weight: bold;
        }

        .mega-container {
            max-width: 1115px;
            margin: 0px auto;
        }

        li {
            text-align: left;
            padding: 2px 5px;
            width: 25%;
            float: left;

            li{
              width:100%;
            }
        }
    }

    .submenu{
        position: absolute;
        width: 100%;
        left: 0;
        background-color: #fff;
        padding: 15px 15px;
        z-index: 99;
        top: 41px;
        min-width: 180px;
        box-shadow: 0px 8px 8px hsla(0, 0%, 0%, 0.39);
        display:none;
        max-width:160px;

        li{
          width:100%;
          text-align:left;
          padding: 2px 5px;
        }
    }
}


.header-menu {
   flex: 1 1 100%; 
   text-align: center; 
   margin-top: 18px;

   #myNavbar{
      display:block;
      position:relative;
   }

   .nav-simple-menu{
      position:relative;
   }
   
   .has-sub-menu:hover {    
      .megamenu{
         display:block;
      }

      .submenu{
        display:block;
      }
   }
}

.navbar-toggle{display:none;}

 @include mq('phone-and-tablet'){
 .navbar-toggle {
    display:block;
    width:16px;
    height:15px;
    background-color: #f4f4f4;
    border: 0px;
    line-height: 28px;
    position: relative;
    padding: 0px;
    margin-bottom:0px;

    .icon-bar {
      width: 100%;
      height: 1px;
      background-color:$black-color;
      display: inline-block;
      position: absolute;
      top: 0;
      left: 0;

      &:nth-child(2){
         top:5px;
      }

      &:nth-child(3){
         top:10px;
      }
      
    }
   }
}

.font-only-menu-type { 
   li {
    list-style: none;
    display: inline-block;
    padding: 0 7px 15px 7px;
   }

   a{
    @include black-peregraph-13-font;
    margin-bottom: 0px;
    text-decoration: none !important;
    text-transform: uppercase;
    }
}

.bc-sf-search-suggestion{min-width:320px !important;}



    .navbar-header{
       position:relative;

       @include mq('phone-and-tablet'){
          flex:0.9; margin-top: 4px;
       }

       .menu-close{
          position: absolute;
          z-index: 99;
          left: -1px;
          top: -2px;
          background-color: #fff;
          display: none;
          width: 22px;
         
          @include mq('tablet'){
             width: 25px;
             left: -4px;
             top: -1px;
          }

       }
    }

.mobile-nav-open{
  .menu-close{
     display:block;
  }
}

@include mq('phone'){
   .search-bar{
      top: 33px;
      margin-right: 5px;
      
      input{
        width: unset;
        min-width: unset;
      }
   }
   
}


