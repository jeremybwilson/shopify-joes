.about-us-inner-content {
    display: flex;
    align-items: center;
    margin: 52px 0 136px 0;

    @include mq('phone'){
      flex-direction: column;
      margin:30px 0 105px 0;
    }
   
    .about-us-inner-right-content{
        P{
           @include paragraph-font;
           line-height:20px;
           margin-bottom: 10px;
        }

    }

}

.about--wrapper{
    h1{
       @include banner-up-head-text-font;
       color:$black-color;
       text-align: center;
       margin-top: 8px;

       @include mq('phone'){
          font-size:27px;
          margin-top: 13px;
       }
    }  

    #page {
        width: 100% !important;
    }

    .about-us-inner-right-content {
        flex: 0 0 45%;
        padding-left: 60px;

        @include mq('phone'){
           flex: 0 0 100%;
           padding-left:0px;
           margin-top: 17px;
        }
    } 

    .about-us-inner-left-content {
        max-width: 611px;
        width: 100%;
        flex: 0 0 56%;

        @include mq('phone'){
           flex: 0 0 100%;
           width:100%;
           max-width:100%;
        }

        img{
           width:100%;
        }
    }
}

.aboutus{
   @include container;

   @include mq('laptop'){
      padding:0 10px;
   }
}