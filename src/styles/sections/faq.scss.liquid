@charset "UTF-8";


#faq {
	h1 {
		margin: 0 0 5px 0;
		@include mq('phone'){
           margin: 0 0 0px 0;
		}
	}
	h4 {
		display: inline-block;
		width: 90%;
		line-height: 2;
		margin: 0;
	}
	h5 {
		margin: 0 0 0px 0;
	}
	p {
		margin: 0 0 10px 0;
	}
	.toggle .opener {
		float: right;
	    position: absolute;
	    right: 0;
	    top: 27%;
	}
	.toggle{
	  &:last-child .toggle-title{
         border-bottom:$border-grey-1;
	  }

	  &:last-child .toggle-title.active{
         border-bottom:0px;
	  }
	}
	.toggle .opener svg {
		display: inline-block;
		width: 14px;
	    height:7px;
	    transition: transform .25s ease;
	    transform-origin: center;
	}
	.toggle-title {
		padding:21px 18px 21px 0;
		border-top:$border-grey-1;
		position: relative;
	}
	.toggle-title.active {
		border-bottom: none;
	}
	.toggle-title.active h5 {
		color: $color--accent-2;
	}
	.toggle-title.active svg {
		transform: rotate(180deg);
	}
	.toggle-inner {
		display: none;
		margin:8px 0 35px 0;
		@include mq('phone'){
		   margin:0px 0 18px 0;
		}
	}

	.fineprint {
    	margin-top: 30px;
    	display:none;
    	p {
    		@include paragraph-font;
    	}
	}
}

.faq{
   .newsletter-newsletter {
	  border-top: 1px solid #e2e2e2;
	  padding-top: 75px;

	  @include mq('phone'){
        padding-top: 56px;
	  }
   }
}
