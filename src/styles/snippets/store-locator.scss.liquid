#header-section .search_bar{
  border:0px !IMPORTANT;
  background-color:transparent !IMPORTANT;
  padding:0 0 !IMPORTANT;
}

.template-.gridlock #content{
    @include main-container;
    margin-bottom: 89px;

    @include mq('phone'){
        margin-bottom:65px;
    }

    .header_html {
        display: none;
    }

    h2{
        @include banner-up-head-text-font;
        color:$black-color;
        margin:3px 0 35px 0px;
        text-align: center;

        @include mq('phone'){
           font-size:$font-27-mo;
           margin: 16px 0 30px 0px;
        }
    }

    input, select {
        font-size: 12px;
        color: #000;
        font-weight: normal;
        letter-spacing: 0px;
        line-height: 16px;
        border: 0px;
        border-bottom: 1px solid #000;
        height: 35px;
        margin-right: 0px;
        padding: 0 20px;
        outline: none !IMPORTANT;
        background-color: transparent;
        width: 100%;
    }

    .search_bar{ 
        margin-bottom: 30px;
        padding: 20px 20px;
        display: flex;
        align-items: center;

        @include mq('phone'){
           flex-direction:column;
        }

        label{
            @include black-paragraph-14-font;
            width: 100%;
            text-align: left;
            font-weight:$bold;

            @include mq('phone-and-tablet'){
               font-size: 12px;
               padding:0px;
            }
        }

        .main_search_bar{
            width: 35%;
            margin-right: 15px;
            margin-bottom: 0px;

            @include mq('phone'){
               width:100%;
               margin-right: 0px;
               margin-bottom: 20px;
            }
        }
        .search_within_distance {
            width: 20%;
            margin-right: 15px;

            @include mq('phone'){
               width:100%;
               margin-right: 0px;
               margin-bottom: 20px;
            }
        }
        .search_limit {
            width: 20%;
            margin-right: 15px;

            @include mq('phone'){
               width:100%;
               margin-right: 0px;
               margin-bottom: 20px;
            }
        }

        #submitBtn{
            @include subscribe-button;
            width: calc(20% - 7px);
            margin: 12px 0 0 0;    
            line-height: 28px;
            border-radius: 0px;
            min-width: unset;

            @include mq('phone-and-tablet'){
                margin: 20px 0 0 0;
                line-height: 25px;
                height: 40px;
                font-size:$font-12-mo;
            }
        }
    }
}

.addresses li,.gm_popup {
    a{
        margin-bottom: 0px !important;
         display: flex !important;
         flex-direction: column;

         @include mq('phone-and-tablet'){
            width:81% !important;
         }
    }
    
    .distance{
      width:40px;
       @include mq('phone-and-tablet'){
          width:35px;
       }
    }

    span{
        @include paragraph-font;  
        width: 100%;
    } 

    span.name{
        @include h4-head;
        color:$black-color !IMPORTANT;
        display: inline-block;

        @include mq('phone-and-tablet'){
           font-size:$font-15-mo;
        }
    }
}

#store_map{
   @include mq('phone'){
      width: 100% !important;
      margin-bottom: 20px;
   }
}
.addresses{ 
   @include mq('phone'){
      width: 100% !important;
   }
   
   li {
        a{
            margin-bottom: 0px !important;
            display: flex !important;
            flex-direction: column;
        }
   }
}

.gm_popup{
     margin-bottom: 0px !important;
     display: flex !important;
     flex-direction: column;
}

.gm-style-iw.gm-style-iw-c {
    border-radius: 0pc !important;
    padding: 0 0 !important;

    .gm-style-iw-d {
        margin: 20px;
    }

    .gm-style-iw-d {
        margin: 20px 10px 20px 20px;
    }
}

.gm-ui-hover-effect {
    right: 0 !IMPORTANT;
    top: 0px !important;

    img{
       width: 20px !IMPORTANT;
       height: 20px !important;
       margin: 0 0 !important;
    }
}