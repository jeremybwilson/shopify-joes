.product-star-rating{

    .product-star-rating__write-review{
        min-height: 18px;

         @include mq('phone'){
             min-height: 22px;
         }
    }

    [data-bv-show=rating_summary] {

        .bv_main_container {
            padding: 0px !important; 
            margin: 0px !important;
            width:100% !important;
            position: relative !IMPORTANT;

            .bv_avgRating_component_container {display: none !IMPORTANT;}
            .bv_numReviews_component_container{display: none !IMPORTANT;}
            .bv_main_container_line_break {display: none !important;}
            
            .bv_main_container_row_flex{ 
                 position: absolute !important; top: -34px !IMPORTANT; right: 0 !important;  padding: 0 0 !important;
                 
                 @include mq('phone'){
                     top: -29px !IMPORTANT;
                 }
            }
            .bv_stars_component_container{padding-right:0px !important;}
            .bv_main_container_CTA_row{ 
                position: absolute !important; top:20px !important;  padding: 0 0 !important;
                @include mq('phone'){
                     top:17px !IMPORTANT;
                }
            }
            .bv_stars_button_container svg {max-width: 12px !important; max-height: 12px !important; margin: 0 4px !IMPORTANT; margin-right: 0px !important;}
            
            .bv_main_container_CTA_row button#WAR {background-color: transparent !important; color: #9B9B9B !important; 
                font-family: 'Montserrat', sans-serif !important; font-size: 12px !important; 
                font-weight: normal !important; text-transform: capitalize !important; 
                padding: 0 0 !important;
            }
 
        }

        .bv_main_container_row_normal{display:none !IMPORTANT;}

    }
    
}


