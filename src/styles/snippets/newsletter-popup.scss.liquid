.subscribe-modal{
      display: none; /* Hidden by default */
      position: fixed; /* Stay in place */
      z-index: 9999; /* Sit on top */
      padding-top:0px; /* Location of the box */
      left: 0;
      top: 0;
      width: 100%; /* Full width */
      height: 100%; /* Full height */
      overflow: auto; /* Enable scroll if needed */
      background-color: rgb(0,0,0); /* Fallback color */
      background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
      
      .modal-content{
          background-color: #fefefe;
          margin: auto;
          border: 1px solid #888;

          width: 100%;
          max-width: 606px;
          padding:55px 50px;
          text-align:center;
          position: relative;

          @include mq('phone'){
              padding: 42px 22px 54px 22px;
          }

          h2{
            text-align: center;
            @include heading-black;

            @include mq('phone'){
                letter-spacing: 0;
                line-height: 26px;
            } 
          }

          .intro{
            @include black-paragraph-13-font;
            text-transform: uppercase;
            margin-top:25px;
            font-weight:$weight-500;
            display: inline-block;
            @include mq('phone'){
              margin-top:5px;
            }
          }
      }

      .close{
          background-image: url(../assets/cross.svg);
          width:13px;
          height: 13px;
          background-repeat: no-repeat;
          background-size: 13px;
          position: absolute;
          top: 15px;
          right: 12px;

          &:hover{
            color: #000;
            text-decoration: none;
            cursor: pointer;
          }

          &:focus{
            color: #000;
            text-decoration: none;
            cursor: pointer;
          }
      }

      form#subscribe--popup--form{
          display: inline-block;
          margin-top:21px;
          width: 100%;
          max-width: 427px;

          @include mq('phone'){
              margin-top:17px; 
          }

          .form-field{
             text-align: center;
             margin-bottom:33px;

             @include mq('phone'){
                margin-bottom: 16px;
             }

             &:nth-child(2){
                margin-bottom: 10px;
                @include mq('phone'){
                   margin-bottom: 34px;
                }
             }
          }

          .men-women-category{
              width: 100%;
              margin-left: 0 !important;
              margin-right: 0 !important;
              margin-top:12px;
              text-align: center;
              justify-content: center;

              @include mq('phone'){
                  display: block;
                  width: 100px;
                  text-align: left;
                  margin:10px auto !important;
                  float: none;
                  position: relative;
                  left: -13px;
              }

              label.custom-radio{
                 margin-left: 20px;

                 @include mq('phone'){
                    line-height: 19px;
                    font-size: 15px;
                    color: #000;
                    font-weight: bold;
                    letter-spacing: 0px;
                    padding-left: 21px;
                    margin-bottom: 18px;
                 }

                 &:first-child{
                    margin-left: 0px;
                 }

                 @include mq('phone'){
                    margin-left: 0px;
                    display: block;
                    clear: both;
                 }
              }
          }

          input.subscribe-button{
              font-size:$font-15;
              margin-bottom: 0;
              margin-top: 13px;
              line-height: 60px;
              height: 60px;
              width: 100%;
              max-width: 251px;
              letter-spacing: 1.02px;

              @include mq('phone'){
                 margin-top: 18px;
                 min-width:100%;
              }
          }
      }
}


