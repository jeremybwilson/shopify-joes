/* HEADER STYLE
* ------------------------------------------ */

	.title {
    font-size: 15px;
    color: #000;
    font-weight: bold;
    letter-spacing: 0.2px;
    margin-top: 50px;
    margin-bottom: 24px;
    text-transform: uppercase;
    text-align: center;
    line-height: 30px;
    color: #000;
		
      .index-section & {
        font-size: 27px;
        text-align: left;
      }
	    #cartpage-nosto-1 & {
	     @include fontSize(20px);
      }      
  }

  .slick-track {
    margin: 0 auto;

    #cartpage-nosto-1 & {
      width: 200px !important;
    }
  }
     
  .slick-initialized .slick-slide {
    display: inline-block;
    vertical-align: top;
    padding: 0;
    margin-bottom: 0;
    width: 100%;

    #cartpage-nosto-1 & {
      width: 200px !important;
    }
  }
  
  .item {
    display: inline-block;
    float: left;
    position:relative;
    width: 100%;
    background-color: transparent;
    margin: 0 0 30px 0;
    padding: 0 5px;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    vertical-align: top;

  }
  .item:hover{
    .product-modal{
      display:block;
    }
  }

	.product-image {
    display: block;
    position: relative;
    width: 100%;
    height: 100% !important;
    background-size: contain;

    #cartpage-nosto-1 & {
      width: 100%;
      float: left;
    }

    img {
      width: 100%;
      display: block;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
  
  .product-info {
  	text-align: center;
    margin: 20px auto;
    max-width: 75%;

    a {
      font-size: 12px;
      color: #000;
      text-transform: uppercase;
      font-weight: normal;
      letter-spacing: 0px;
      line-height: 16px;
      margin-top: 0px;
      min-height: auto;
      font-weight: 500;
    }

  	.name {    
      display: block;
      margin-bottom: 2px;

      #cartpage-nosto-1 & {
      
