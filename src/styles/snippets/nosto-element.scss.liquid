    }

    #cartpage-nosto-1 & {
      width: 100%;
      text-align: center;
    }
  }
    

 /* CONTROLS : Arrows and slider dots
 * ------------------------------------------ */


  .slick-arrow {
    cursor: pointer;
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    z-index: 2;

    &:hover { text-decoration: none; }

    &.prev {
    	left: -20px;
    }

    &.next {
    	right: -20px;
    }

    .label { display: none; }

    .icon-arrow_right,
    .icon-arrow_left { width: 8px; }
  }

  .slick-dots {
    text-align: center;
    height: 7px;
    margin-top: 12px;

    li {
      display: inline-block;
      margin: 0 4px;
      height: 7px;
      width: 7px;
      border-radius: 50%;

      button {
        background-color: #a3a3a3;
        text-indent: -9999px;
        width: 7px;
        height: 7px;
        border-radius: 50%;
        min-height: 6px;
        margin: 0 0;
        padding: 0 0;
      }

      &.slick-active {
        button {
          background-color: #000;
        }
      }
    }
  }

  .nosto-ribbon {
   display:none !important;
  }
}
