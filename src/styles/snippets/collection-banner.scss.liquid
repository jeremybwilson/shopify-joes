/* COLLECTION BANNER : Header image and content
 * ---------------------------------------------- */
/*collection-banner*/

.right-banner-img {
    width: calc(100% - 41.8%);
    display: inline-block;
    object-position:center;
    object-fit:cover;

    img{
      width:100%;
      height:101%;
      object-position:center;
      object-fit:cover;
    }

    .box-ratio{padding-bottom:0px !important; height:100%;}

    .banner-image-mobile {
        display: none;

        @include mq('phone'){
            display:block;
        }
    }

    .banner-image-desktop{
        @include mq('phone'){
           display:none;
        }
    }
}

.right-banner-img.collection-banner-full{width:$full-width;}

.banner-text-box-wrap {
    max-width: 41.8%;
    display: inline-block;
    width: 100%;
}

#shopify-section-collection-template .collection-banner .banner-text-box-wrap .banner-text-box.text-center {
    margin: 0 0 !important;
}

.collection-banner{
    flex-direction: row-reverse;
    width: 100% !important;
    display: flex;
    /*height: 586px;*/
    width: calc(100% - 50px);
    overflow: hidden;
    padding:$padding-left-right;
   
    /*@include mq('phone-and-tablet'){
       height:400px;
    }*/

    @include mq('phone'){
       /*height:250px;*/
       padding:0 10px;
    }

    /*@include mq('mobile-potrait'){
       height:131px;    
    }*/

}

.banner-header{
  @include banner-head;
  line-height: 1.2;
      
      @include mq('phone-and-tablet'){
         font-size:$font-32-mo;
      }

      @include mq('phone'){
        font-size:$font-18-mo;
      }

      @include mq('mobile-potrait'){
        font-size:$font-15-mo;
      }
}

.banner-body{
  @include banner-paragraph;
  max-width:70%;
    
    @include mq('laptop'){
       max-width:90%;
    }
    @include mq('phone-and-tablet'){
       max-width:100%;
    }
    @include mq('phone'){
        display:none;
    }
}

.banner-content-plp {
    margin: 0 0 !important;
    padding: 40px;
    display: flex;
    height: 100%;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    background-color: #000;
    
    @include mq('phone'){
        padding:20px;
    }

    p{
       @include banner-paragraph;
       max-width: 70%;
    }

}
/*collection-banner*/
