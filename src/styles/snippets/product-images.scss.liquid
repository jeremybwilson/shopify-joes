@charset "UTF-8";

/*
  MOBILE PRODUCT PHOTOS
  -----------------------------
*/

.mobile-product-photos--wrapper {
  @include mq('tablet-and-up') {
    display: none;
  }
}

#mobile-product-photos {
  width: 100%;
  margin-bottom:32px;
  position: relative;

  @include mq('phone'){
    margin: 0 10px;
    width: calc(100% - 20px);
  }

  @include mq('tablet-and-up') {
    display: none;
  }

  .owl-nav {
    display: block;

    button {
      position: absolute;
      top:49%;
      outline: none;
      
      background-image: url(../assets/left-arrow.svg);
      background-color: transparent;
      background-repeat: no-repeat;
      padding: 8px 4px;
      height: 15px;
      margin: 0px;

      &.disabled {
        opacity: .3;
      }
    }
    svg {
      width: 18px;

      @include mq('tablet-and-up') {
        width: 20px;
      }
    }
  }
  .owl-prev {
    left:9px;
  }
  .owl-next {
    right:9px;
    transform: rotate(-180deg);
  }

  .owl-next:before {
    display: none;
  }
  .owl-prev:before {
    display: none;
  }

  .owl-item {
    .video-wrapper {
      padding-bottom: 100%; // So video is centered in the slide space
    }

    img {
      margin: 0 auto;
      display:block;
    }
  }
}


/*
  PRODUCT PHOTOS (Desktop Photos)
  -------------------------------- */
.favourite-icon{
  position: absolute;
  top: 20px;
  right: 25px;
  z-index: 99;

  img{
    width: 28px !important;
  }
}

#product-photos {
  width:63.7%;
  margin: 0 0;

  @include mq( 'phone' ) {
    display: none;
  }

  .product-video {
    .video-wrapper {
      padding: 0 0 100% 0;
    }
  }
}


#thumbnail-gallery {
  position: relative;
  max-width: 106px;
  width: 100%;
  margin:0px;


  // THUMBNAIL
  .product-thumbnail {
    cursor: pointer;
    display: inline-block;
    outline: none;
    width: 100%;
    opacity: .5;

    &.selected,
    &:hover {
      opacity: 1;
    }

    .slick-vertical{
      height: 100%;
      position: relative;
    }
  }


  // VIDEO : THUMBNAILS
  .product-video-thumbnail {
    @include flexbox;
    @include align-items( center );
    @include justify-content( center );
    position: relative;
    background: #f7f5f1;

    &:before {
      content: "";
      padding-bottom: 100%; // Square thumbnail regardless of video thumbnail image ratio
      position: relative;
      display: block;
    }
  }

  .play-button-text {
    display: none;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: $color--white;
    @include fontDim(8px,8px,.2em);
    font-weight: $font-weight--black;
    text-transform: uppercase;
    text-align: center;
    z-index: 3;
  }

  .play-button-shape {
    position: absolute;
    content: '';
    z-index: 2;
    width: 0;
    height: 0;
    border-top: 11px solid transparent;
    border-bottom: 11px solid transparent;
    border-left: 21px solid $color--accent-1;


  }
}

