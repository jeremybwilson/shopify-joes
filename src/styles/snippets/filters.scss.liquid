/*filter*/

.styled-select {          
   /* @include product-filter-select; 
    text-indent: -9999px; */ 
   @include black-paragraph-13-font;   
    position: absolute;
    background-color: #fff;
    top: 28px;
    left: 0;
    padding: 15px 0px;
    right: 0;
    margin: 0px auto;
    min-width: 180px;
    border-bottom:$border-grey-1;
    z-index: 99;
    box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.22);     
    display:none;

    @include mq('phone'){
        left:auto;
        right:0;
    }

    li{
        padding: 5px 15px;

        @include mq('phone'){
          padding:8px 15px;  
        }
    }  

    .li-active{
       font-weight:$bold; 
    }
}

.styled-select.active {
    display: block;
}

#sortme{ 
   
    display: inline-block;
    margin-left: 20px;
    cursor: pointer;

    @include mq('phone'){
        width:82px;
        float: right;
        z-index: 99;
        position: relative;
    }

    li {
      list-style: none;
      width:100% !important;

      @include mq('phone'){
         float:unset !important;
      }
    }
}

.bc-sf-filter-option-label span:first-child {
    box-shadow: none !important;
}

#bc-sf-filter-tree-h .bc-sf-filter-option-block .bc-sf-filter-block-title a{
  background-color:transparent !important;
  &:before{
     display:none;
  }
}
#bc-sf-filter-tree-h .bc-sf-filter-option-block .bc-sf-filter-block-title a.selected div{
   display:none;
}

#full-width-filter{
    margin-top: -8px;
    border-bottom:$border-grey-1;
    display: flex;
    align-items: center;
    justify-content: center;

    @include mq('phone-and-tablet'){
      margin-top:5px;
    }

    #bc-sf-filter-tree-h {
        width: 100% !important;
        margin-bottom:25px;
    }
    .constrain-container {
        width:max-content !important;

        @include mq('phone'){
            width: 209px !important;
        }
    }
}

#bc-sf-filter-top-sorting{
    position: relative;
   
    .sort-label{margin-right: 0px; display:block !important;}

    .sort-label.active:before {
        transform: rotate(180deg);
    }
}

#collection-filters {
    width: 100%;
    position: relative;

    @include mq('phone-and-tablet'){
       display:inline-block;
    }
}

.filter-open #filter-bg-shadow {
    opacity: 0.7;
    pointer-events: all;
    height:100%;
    display:none;
}

 .bc-sf-filter-clear {
    display: none !important;
}

#filter-bg-shadow {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 10;
    background: #000;
    pointer-events: none;
    transition: opacity 0.25s ease-in-out;
    height:0;
}

.bc-sf-filter-option-block-fit ul li a span:first-child {
    display: none !important;
}

.filter-list-desktop-wrap {
    position: absolute;
    background: {{ settings.filter_bg }};
    width: 100%;
    height: 0;
    top:28px;
    left: 0;
    z-index: 999;
    opacity: 0;
    margin-left: 0 !important;
    border-bottom: {{ settings.filter_bar_border_width }}px solid {{ settings.filter_bar_border_color }};
    padding: 50px 50px 34px 50px;
    display:none;

    @include mq('phone-and-tablet'){
        top:33px;
    }

    #filter-apply-button-desktop{
       @include filter-applay-button;
       float:right;
       margin-bottom: 0px;
    }

    #filter-clear-button-desktop {
        display: inline-block;
        margin-top:12px;
        @include black-paragraph-13-font;
        text-decoration: underline;
        width: calc(100% - 200px);
        text-align: right;
        cursor:pointer;
    }

    li {
        width: 100% !important;
        margin:0px !important;

        .selected span {
            font-weight: bold !important;
        }
    }

    .bc-sf-filter-option-box li{
       border:0px !important;

       a{
         text-align:left !important;
          padding: 0 0 !important;
          border-color:transparent !important;
          background:transparent !important;
          color:$black-color !important;
       }
    }

    .bc-sf-filter-block-content {
        display: block !important;
        background-color: transparent !important;
        border: 0px !important;
        position: relative !important;

        .bc-sf-filter-block-content-inner {
            padding: 0 0 !important;
        }

        .bc-sf-filter-select-button {
            display: none;
        }

    }

}

.bc-sf-filter-option-block .bc-sf-filter-block-content ul li input[type=checkbox]+a{
   padding:0px !important;
}

.bc-sf-filter-pc.bc-sf-filter-selection-wrapper {
    display: none;
}

#bc-sf-filter-tree-h .bc-sf-filter-option-block .bc-sf-filter-block-content{
    min-width:100% !important;
}


.filter-open{ 
      .filter-list-desktop-wrap{
         height:auto;
         opacity: 1;
         display:block;

          @include mq('phone'){
             display:none;
          }
      }

      #bc-sf-filter-tree-h {
         height: auto;
         pointer-events: all;
         background:transparent;
         flex-wrap: wrap;

          @include mq('lap'){
              justify-content: flex-start;
          }
          @include mq('tablet'){
              justify-content: flex-start;
          }
      }

      #filter-button-desktop{
          &:before{
             transform: rotate(180deg);
           }
      }

      #bc-sf-filter-tree-mobile-button {
         &:before{
            transform: rotate(180deg);
         }
      }
}

.bc-sf-filter-option-block{
    position: relative;
    margin-bottom: 0;
    width:auto;
    margin-right: 20px !important;
    margin-bottom: 30px !important;

    &:last-child{
        margin-right: 0px !important;
    }

    @include mq('lap'){
        margin-right:15px !important;
        margin-bottom:35px !important;
    }

    @include mq('tablet'){
        margin-right:15px !important;
        margin-bottom:35px !important;
    }

    @include mq('phone'){
      max-width: 100%;
        margin-right:0px !important;
        margin-bottom:0px !important;
    }

    .bc-sf-filter-option-amount{
      display:none;
    }
    .bc-sf-filter-block-content-inner{
        display: flex;
        .bc-sf-filter-option-multiple-list{
            max-width: 130px;
            width: 100%;

            @include mq('lap'){
                max-width: 105px;
            }

            @include mq('tablet'){
                max-width: 105px;
            }
        }
    }
}


#bc-sf-filter-tree-h {
    position: relative;
    margin-left: 0;
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -moz-box-pack: justify;
    -ms-flex-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: start;
    -moz-box-align: start;
    -ms-flex-align: start;
    -webkit-align-items: flex-start;
    align-items: flex-start;
    justify-content:center;
    float: none;
}

.filter-background-max-width{
    max-width:1340px;
    margin: 0px auto !important;
    width:100%;
    float: none !important;
}


#filter-button-desktop, .sort-label {
    display: inline-block;
    padding: 6px 20px 4px 6px;
    @include black-paragraph-13-font;
    text-transform: uppercase;
    position: relative;
    top: 1px;
    border: 0px;
    border-bottom: 1px solid #000;
    border-radius: 0px;
    width: 82px;
    margin-right: 20px;
    cursor: pointer;

    @include mq('phone'){
       display:none;
    }

    &:before {
        content: "";
        position: absolute;
        background-image: url(../assets/arrow-down.svg);
        width: 12px;
        height: 6px;
        top: 13px;
        right: 6px;
        background-repeat: no-repeat;
        z-index: 999;
    }
}



#filter-list-mobile-wrap {  

    #filter-list-button-wrap {
        position: relative;
        top: -27px;
        width: 209px;
        margin: 0px auto;
    }
    
    @include mq('phone-and-tablet'){
    }

    #bc-sf-filter-tree-mobile-button  {
      display: inline-block;
      padding: 6px 20px 4px 6px;
      @include black-paragraph-13-font;
      text-transform: uppercase;
      border: 0px;
      border-bottom: 1px solid #000;
      border-radius: 0px;
      width:100px;
      margin-right: 20px;
      cursor: pointer;
      background-color: transparent !important;
      height: auto;
      text-align: left;
      margin: 0 auto !important;
      position:relative;

        &:before {
          content: "";
          position: absolute;
          background-image: url(../assets/arrow-down.svg);
          width: 12px;
          height: 6px;
          top: 13px;
          right: 6px;
          background-repeat: no-repeat;
        }
    }

    .bc-sf-filter-selection-wrapper {
        display: none;
    }

    .mobile-apply-button{
       @include filter-applay-button;
       float:right;
       margin-bottom:25px;
       margin-right:0px;
       margin-top: 15px;
       min-width: 120px;
       max-width: 120px;
    }

    #filter-clear-button-mobile {
        float: left;
        margin-top: 22px;
        font-size:$font-14;
    }

    #bc-sf-filter-tree{ 

        width: 100% !important;
        float: none !important;
        min-width: 320px;
        left: 0;
        top:33px;
        padding: 25px 40px 0px 45px;
        margin: 0px;
        position: absolute;
        z-index: 99;
        background-color: #fff;
        margin:0px;

       .bc-sf-filter-option-block{

          a.selected{
             span{
               font-weight:$bold;
             }
          }

          .bc-sf-filter-block-content .bc-sf-filter-option-box li{
            width: 100% !important;
             border:0px;
               a{
                 text-align:left;  
               }
               
               a.selected{
                  background:transparent !important;
                  border:0px !important;
                
                  span{
                     font-weight:$bold;
                  }
               }
          }
         
          padding: 15px 0;
          border-top: 0px solid #e3e3e3;

         .bc-sf-filter-block-title{ 
              h3 span:before {
                  content: "";
                  position: absolute;
                  background-image: url(../assets/arrow-down.svg);
                  width: 12px;
                  height: 6px;
                  top:15px;
                  right: 0px;
                  background-repeat: no-repeat;
                  margin: 0 !important;
                  border: 0px !important;
                  padding: 5px;
                  transform: rotate(180deg);
              }

              h3 span.up:before{
                  transform: rotate(0deg);
              }
         }
       }
    }
}

