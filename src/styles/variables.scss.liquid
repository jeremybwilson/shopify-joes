@mixin mq($alias) {
  @if $alias == "phone" {
    @media #{$phone} {
      @content;
    }
  } @else if $alias == "tablet" {
    @media #{$tablet} {
      @content;
    }
  } 
  @else if $alias == "mobile-landscap" {
    @media #{$mobile-landscap} {
      @content;
    }
  } 
  @else if $alias == "mobile-landscap-two" {
    @media #{$mobile-landscap-two} {
      @content;
    }
  } 
  @else if $alias == "mobile-potrait-small" {
    @media #{$mobile-potrait-small} {
      @content;
    }
  } 
  @else if $alias == "mobile-potrait" {
    @media #{$mobile-potrait} {
      @content;
    }
  } 
  @else if $alias == "laptop-up" {
    @media #{$laptop-up} {
      @content;
    }
  } 
  @else if $alias == "laptop" {
    @media #{$laptop} {
      @content;
    }
  } 
  @else if $alias == "phone-and-tablet" {
    @media #{$phone-and-tablet} {
      @content;
    }
  } @else if $alias == "tablet-and-up" {
    @media #{$tablet-and-up} {
      @content;
    }
  } @else if $alias == "tablet-portrait" {
    @media #{$tablet-portrait} {
      @content;
    }
  } @else if $alias == "tablet-landscape" {
    @media #{$tablet-landscape} {
      @content;
    }
  } @else if $alias == "lap" {
    @media #{$lap} {
      @content;
    }
  } @else if $alias == "lap-and-up" {
    @media #{$lap-and-up} {
      @content;
    }
  } @else if $alias == "desk-and-up" {
    @media #{$desk-and-up} {
      @content;
    }
  } @else if $alias == "lap-and-desk" {
    @media #{$lap-and-desk} {
      @content;
    }
  } @else if $alias == "wide-and-up" {
    @media #{$wide-and-up} {
      @content;
    }
  } @else if $alias == "retina" {
    @media #{$retina} {
      @content;
    }
  }
}



