$modalBg: {{ settings.background }};
$modalFallbackTextColor: {{ settings.text_color }};
$overlayBg: rgba( {{ settings.fancybox_overlay_bg }} );


.fancybox-wrap,
.fancybox-skin,
.fancybox-outer,
.fancybox-inner,
.fancybox-image,
.fancybox-wrap iframe,
.fancybox-wrap object,
.fancybox-nav,
.fancybox-nav span,
.fancybox-tmp
{
  padding: 0;
  margin: 0;
  border: 0;
  outline: none;
  vertical-align: top;
}

.fancybox-wrap {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 8020;
}

.fancybox-skin {
  position: relative;
  background: $modalBg;
  color: $modalFallbackTextColor;
  text-shadow: none;
}

.fancybox-opened {
  z-index:9999;
}

.fancybox-outer, .fancybox-inner {
  position: relative;
} 

.fancybox-inner {
  overflow: hidden;
}

.fancybox-type-iframe .fancybox-inner {
  -webkit-overflow-scrolling: touch;
}

.fancybox-error {
  @include black-paragraph-14-font;
  margin: 0;
  padding: 15px;
  white-space: nowrap;
  text-align: center;
}

#fancybox-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -22px;
  margin-left: -22px;
  background-position: 0 -108px;
  opacity: 0.8;
  cursor: pointer;
  z-index: 8060;
}

#fancybox-loading div {
  width: 44px;
  height: 44px;
  background: url({{ 'fancybox_loading.gif' | asset_url }}) center center no-repeat;
}

.fancybox-nav {
  position: absolute;
  top: 0;
  width: 2%;
  height: 100%;
  cursor: pointer;
  text-decoration: none;
  background: transparent url({{ 'blank.gif' | asset_url }}); /* helps IE */
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  z-index: 8040;
}

.fancybox-prev {
  left: 0;
}

.fancybox-next {
  right: 0;
}

/* NOTE : Font for X is in product-quickview for now since it needs scss help */
.fancybox-close {
    position: absolute;
    top: 0;
    right: 0;
    line-height: 40px;
    cursor: pointer;
    z-index: 8040;
    text-align: center;
    transition: all .25s ease-in-out;
}

.fancybox-close:before {
    content: "";
    background-image: url(../assets/cross.svg);
    width:11px;
    height:11px;
    background-repeat: no-repeat;
    background-size:11px;
    z-index: 9999;
    position: absolute;
    right: 16px;
    top: 16px;
    font-weight: $font-weight--book;
    line-height: 40px;
}

.fancybox-nav span {
  position: absolute;
  top: 50%;
  margin-top: -25px;
  cursor: pointer;
  z-index: 8040;
  visibility: hidden;
  font-family: FontAwesome;
  text-align: center;
  line-height: 50px;
  background: #fff;
  width: 50px;
}

.fancybox-prev span {
  left: -10px;
}

.fancybox-prev span:before {
  content:"\f104";
}

.fancybox-next span {
  right: -10px;
  content:"\f105";
}

.fancybox-next span:before {
  content:"\f105";
}

.fancybox-nav:hover span {
  visibility: visible;
}

/* Overlay helper */
.fancybox-overlay {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  display: none;
  z-index: 8010;
  background: rgba( 0,0,0,0.8 ); /* fallback */
  background: $overlayBg;
}

.fancybox-overlay-fixed {
  position: fixed;
  bottom: 0;
  right: 0;
}

.fancybox-lock .fancybox-overlay {
  overflow: auto;
  overflow-y: scroll;
}

