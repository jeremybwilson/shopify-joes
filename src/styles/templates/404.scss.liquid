
/* 404 Page styling
 * ----------------------------------------------------------------------- */

body.template-404 {
	
	#content {
	    margin:89px 0px 89px;
		@include container;

		@include mq('laptop'){
			padding:$padding-left-right-mobile15;
		}

		@include mq('phone'){
			margin:65px 0px 65px;
		}
	}

	.newsletter-newsletter{
	     padding-top:65px;
		 border-top:$border-grey-1;
	}

	.bc-sf-search-suggestion-wrapper{
	  position: absolute !important;
    }
}

.page-not-found{
   text-align: center;	

   h1{
	   @include banner-up-head-text-font;
	   color:$black-color;
	   margin-bottom: 5px;

	   @include mq('phone'){
		   font-size:$font-27-mo;
	   }
   }
   p{
	   @include black-paragraph-13-font;
   }

   h3{
	   @include h3-heading;
   }

   #search-bar{
	   margin-top: 20px;
   }

   .form-field{
	    box-shadow: none !important;
		max-width: 300px;
		margin: 5px auto 0 auto;
		display: block;
		float: none;
		text-align:center;
   }
}
