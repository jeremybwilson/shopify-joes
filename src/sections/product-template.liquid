        "label": "Learn more link"
      },
      {
        "type": "checkbox",
        "id": "shipping_show_account_link",
        "label": "Show account link"
      },
      {
        "type": "header",
        "content": "Social share"
      },
      {
        "type": "checkbox",
        "id": "show_social",
        "label": "Show social share icons",
        "default": false
