      {
        "type": "header",
        "content": "Product gallery"
      },
      {
        "type": "checkbox",
        "id": "show_controls",
        "label": "Show gallery controls",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_zoom",
        "label": "Show zoom",
        "default": false
      },
      {
        "type": "select",
        "id": "thumbnails",
        "label": "Thumbnail images position",
        "options": [
          {
            "value": "left",
            "label": "Left"
