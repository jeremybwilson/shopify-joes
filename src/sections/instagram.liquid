{% comment %} TEMPLATE {% endcomment %}

<script id="instagram-template" type="text/template">
  {% raw %}
    <div class="loop-part">
      <a class="instagram-image-container" target="_blank" href="{{link}}" rel="ig" title="{{caption}}">
        <img class="instagram-image" src="{{image}}" />
      </a>
    </div>
  {% endraw %}
</script>

<div class="homepage-section instagram-feed no-fouc index-section" data-section-id="{{ section.id }}" data-section-type="instagram">
  <section>
        <div class="as-see-on-part">
            <div class="container-fluid">
                <div class="newsletter-homepage">
                    <div class="heading-part">
                        {% if section.settings.heading != blank %}
                          <h2>{{ section.settings.heading | escape }}</h2>
                        {% endif %}
                        {% if section.settings.text != blank %}
                          <div class="copy">{{ section.settings.text }}</div>
                        {% endif %}
                    </div>

                    {% assign token = section.settings.instagram_access_token %}
                    {% capture userid %}
                    {{- token | truncate: 9, "" -}}
                    {% endcapture %}
                    <div class="as-see-part-slider">
                        {% comment %} :: Dash Hudson :: {% endcomment %}
                        {% if settings.dashhudson_enabled %}
                            {% include 'dash-hudson-library' %}
                        {% endif %}
                    </div>

                    {% comment %} CTA {% endcomment %}                   
                    {% if section.settings.cta_text != blank and section.settings.link != blank %}
                    <div class="cta">
                      <a href="{{ section.settings.link }}" target="_blank" class="black-button">
                        <span>{{ section.settings.cta_text }}</span>
                      </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
</div>

<style>
  .instagram-image-container {
    display: block;
    overflow: hidden;
    margin: 0px !important;
    padding: 0px;
    height: 100%;
  }
</style>


{% schema %}
{
	"name": "Dash Hudson Insta feed",
	"settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow us on Instagram"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use <strong>#InMyJoes</strong> for your photos to be featured. Tap to shop.</p>"
    },
    {
       "type": "url",
         "id": "link",
      "label": "Link"
    },
    {
       "type": "text",
         "id": "cta_text",
      "label": "CTA text",
    "default": "FOLLOW US"
    }
  ],
  "presets": [
    {
      "name": "Dash Hudson Insta feed",
      "category": "Social media"
    }
  ]
}
{% endschema %}
